<li class="categories__item">
	<input
		type="checkbox"
		name="[[+filter_key]]"
		id="mse2_[[+table]][[+delimeter]][[+filter]]_[[+idx]]"
		value="[[+value]]"
		class="categories__checkbox"
		[[+checked]]
		[[+disabled]]
		style="display: none;"
	/> 
	<label
		for="mse2_[[+table]][[+delimeter]][[+filter]]_[[+idx]]"
		class="[[+disabled]] categories__url"
		style="display: block; border-color: #5F5BAB;"
	>
		[[+title]]
		<span class="categories__bg" style="background-color: #5F5BAB;"></span>
	</label>
</li>
